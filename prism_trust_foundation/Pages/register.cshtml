    <div class="container register">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                <h3>Welcome</h3>
                <p>You are only a few minutes away to get full access of our website!</p>
                <input type="submit" asp-page="/login" value="Login" /><br />
            </div>
            <div class="col-md-9 register-right">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Register as an account</h3>
                        <form method="post" class="row register-form">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div> <label class="text-danger">@Model.MyMessage</label> </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="MyUser.NRIC" type="text" class="form-control" minlength="9" maxlength="9" placeholder="NRIC *" value="" />
                                    <span asp-validation-for="MyUser.NRIC" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="MyUser.Fname" type="text" class="form-control" placeholder="First Name *" value="" />
                                    <span asp-validation-for="MyUser.Fname" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <input asp-for="MyUser.Lname" type="text" class="form-control" placeholder="Last Name *" value="" />
                                    <span asp-validation-for="MyUser.Lname" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <input asp-for="MyUser.Password" type="password" class="form-control" placeholder="Password *" value="" />
                                    <span asp-validation-for="MyUser.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input name="confirmPass" type="password" class="form-control" placeholder="Confirm Password *" value="" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="MyUser.Email" type="email" class="form-control" placeholder="Your Email *" value="" />
                                    <span asp-validation-for="MyUser.Email" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <input asp-for="MyUser.PhoneNum" type="text" minlength="8" maxlength="8" class="form-control" placeholder="Your Phone Number *" value="" />
                                    <span asp-validation-for="MyUser.PhoneNum" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <input asp-for="MyUser.BirthDate" type="date" class="form-control" placeholder="Date of Birth*" value="" />
                                    <span asp-validation-for="MyUser.BirthDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="maxl">
                                        <label class="radio inline">
                                            @Html.RadioButton("MyUser.Gender", "Male") <span>Male</span>
                                        </label>
                                        <br />
                                        <label class="radio inline">
                                            @Html.RadioButton("MyUser.Gender", "Female") <span>Female</span>
                                            <span asp-validation-for="MyUser.Gender" class="text-danger"></span>

                                        </label>
                                    </div>
                                </div>
                                <input id="registerDoner" type="submit" class="btnRegister" value="Register" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
