@page
@model prism_trust_foundation.Pages.Admin.Timeslots.AddTimeslotModel
@{
}
<form class="mt-3" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="myTimeslot.Shift_Start">Shift Starting</label>
            <div class="col-sm-10 ">
                <input class="form-control" asp-for="myTimeslot.Shift_Start"
                       oninput="this.value = this.value.toTitleCase()" />
                <span asp-validation-for="myTimeslot.Shift_Start" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="myTimeslot.Shift_End">Shift Ending</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="myTimeslot.Shift_End"
                       oninput="this.value = this.value" />
                <span asp-validation-for="myTimeslot.Shift_End" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="myTimeslot.Shift_Type">Shift Type</label>
            <div class="col-sm-10 d-flex align-items-center">
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.myTimeslot.Shift_Type, "Donate", new {@class = "form-check-input"})
                    <label class="form-check-label">Donate</label>
                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.myTimeslot.Shift_Type, "Recycle", new {@class = "form-check-input"})
                    <label class="form-check-label">Recycle</label>
                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.myTimeslot.Shift_Type, "Volunteer", new {@class = "form-check-input"})
                    <label class="form-check-label">Volunteer</label>
                </div>
                <span asp-validation-for="myTimeslot.Shift_Type" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="myTimeslot.Shift_Quantity">Shift Quantity</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="myTimeslot.Shift_Quantity"
                       oninput="this.value = this.value" />
                <span asp-validation-for="myTimeslot.Shift_Quantity" class="text-danger"></span>
            </div>
        </div>
        
    </div>
    <div>
        <input type="submit" value="Add" class="btn btn-primary" />
        <a class="btn btn-secondary ms-2" href="/Admin/Events/EventList">Cancel</a>
    </div>
</form>