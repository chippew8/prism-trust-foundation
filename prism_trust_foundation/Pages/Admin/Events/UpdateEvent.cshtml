@page
@model prism_trust_foundation.Pages.Admin.UpdateModel
@{
    ViewData["Title"] = "Update Event";
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<form class="mt-3" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row mb-3" hidden>
        <label class="col-sm-2 col-form-label" asp-for="MyEvent.EventId" >
        </label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="MyEvent.EventId" readonly />
            <span asp-validation-for="MyEvent.EventId"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyEvent.EventName">Event Name</label>
        <div class="col-sm-10 ">
            <input class="form-control" asp-for="MyEvent.EventName"
                   oninput="this.value = this.value.toTitleCase()" />
            <span asp-validation-for="MyEvent.EventName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyEvent.Description"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="MyEvent.Description"
                   oninput="this.value = this.value" />
            <span asp-validation-for="MyEvent.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyEvent.EventType">Event Type</label>
        <div class="col-sm-10 d-flex align-items-center">
            <div class="form-check form-check-inline">
                @Html.RadioButtonFor(m => m.MyEvent.EventType, "Donation Drive", new {@class = "form-check-input"})
                <label class="form-check-label">Donation Drive</label>
            </div>
            <div class="form-check form-check-inline">
                @Html.RadioButtonFor(m => m.MyEvent.EventType, "Recycling Drive", new {@class = "form-check-input"})
                <label class="form-check-label">Recycling Drive</label>
            </div>
            <span asp-validation-for="MyEvent.EventType" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyEvent.EventVenue">Venue</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="MyEvent.EventVenue"
                   oninput="this.value = this.value" />
            <span asp-validation-for="MyEvent.EventVenue" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyEvent.EventDate">Date</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="MyEvent.EventDate"
                   oninput="this.value = this.value.toString()" />
            <span asp-validation-for="MyEvent.EventDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
            <label class="col-sm-2 col-form-label" asp-for="MyEvent.IsActive">Event Status</label>
            <div class="col-sm-10 d-flex align-items-center">
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.MyEvent.IsActive, true, new {@class = "form-check-input"})
                    <label class="form-check-label">Active</label>
                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.MyEvent.IsActive, false, new {@class = "form-check-input"})
                    <label class="form-check-label">Not Active</label>
                </div>
                <span asp-validation-for="MyEvent.IsActive" class="text-danger"></span>
            </div>
        </div>

    <div class="col-md-4">
        <div class="mb-3">
            <input type="file" accept="image/*" asp-for="MyEvent.ImageURL"
                   class="form-control" onchange="showImgPreview(this)" />
            <span asp-validation-for="MyEvent.ImageURL" class="text-danger"></span>
        </div>
        <img id="imgPreview" class="rounded-circle"
             style="height:300px;width:300px;object-fit:cover"
             src="@(string.IsNullOrEmpty(Model.MyEvent.ImageURL) ?
"/Picture/user.png" : Model.MyEvent.ImageURL)"
             onerror="this.src='/Picutre/user.png'" />
        <input class="form-control d-none" asp-for="MyEvent.ImageURL" />
    </div>

    <div>
        <input type="submit" value="Update" class="btn btn-primary" />
        <a class="btn btn-secondary ms-2" href="/Events/EventList">Cancel</a>
    </div>
</form>

<script>
function showImgPreview(input) {
    if (input.files[0]) {
        var uploadimg = new FileReader();
        uploadimg.onload = function(displayimg) {
            $("#imgPreview").attr('src', displayimg.target.result);
        }
        uploadimg.readAsDataURL(input.files[0]);
    }
}
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }