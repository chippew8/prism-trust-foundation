@page
@model prism_trust_foundation.Pages.SubmitEnquiryModel
@{
	ViewData["Title"] = "Submit Enquiry";
}
<div class="text-center p-t-136">
<h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div><h2>Ask us a question, our staff team will get back to you ASAP!</h2>
	<form class="mt-3" method="post">
	<div class="row mb-3">
		<label class="col-sm-2 col-form-label">Email: </label>
		
		<div class="col-sm-10">
			<input class="form-control" asp-for="Email"/>
		</div>
	</div>

	
	<div class="row mb-3">
		<label class="col-sm-2 col-form-label">Enquiry Type: </label>
		
		<div class="col-sm-10">
			
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-2 col-form-label">Enquiry Description: </label>
		
		<div class="col-sm-10">
			<input class="form-control" asp-for="EnquiryDescription"/>
		</div>
	</div>


	<button type="submit" class="btn btn-primary">Submit</button>
</form>
	












</div>
