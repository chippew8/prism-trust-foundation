@page
@model prism_trust_foundation.Pages.Query.IndexModel
@{
    ViewData["Title"] = "Query Page";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>

<body>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h3><strong>Update Details</strong></h3>
                            </div>
                            <form method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row mb-3" hidden>
                                    <label class="col-sm-2 col-form-label" asp-for="MyQuestion.Email">
                                    </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="MyQuestion.Email" value="test@gmail.com" readonly />
                                        <span asp-validation-for="MyQuestion.Email"
                                              class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label class="col-sm-2 col-form-label" asp-for="MyQuestion.UserQuestion">Query</label>
                                    <div class="col-sm-10 ">
                                        <input class="form-control" asp-for="MyQuestion.UserQuestion" required/>
                                        <span asp-validation-for="MyQuestion.UserQuestion" class="text-danger"></span>
                                    </div>
                                </div>

                                <div>
                                    <input type="submit" value="Submit" class="btn btn-primary" />
                                    <a class="btn btn-secondary ms-2" href="/Index">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
