@page
@using Pages;
@using Microsoft.AspNetCore.Identity
@using prism_trust_foundation.Services;
@using prism_trust_foundation.Models
@inject UserManager<ApplicationUser> _userManager;
@model EDP_Project.Pages.CouponRedeemModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>
<body>
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="hero">
        @{
            var couponListCount = Model.CouponList.Count;
            var todays_date = new DateTime(DateTime.Now.Year, DateTime.Now.Month, DateTime.Now.Day);

            //var user = await _userManager.GetUserAsync(User);
            //Console.WriteLine(user);
            Console.WriteLine("test");
        }
        @if (couponListCount.Equals(0))
        {
            <h1 class="display-4" style="text-align:center;">There are no coupons</h1>
            @*<div class="wrapper">
        <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52"><circle class="checkmark_circle" cx="26" cy="26" r="25" fill="none" /><path class="checkmark_check" fill="none" d="M14.1 14.1l23.8 23.8 m0,-23.8 l-23.8,23.8" /></svg>
        </div>*@
            <img src="/Picture/sad.png" width="300px" height="300px" class="center" />
            <br />

        }
        else
        {
            <h1 class="display-4" style="text-align:center;">Current coupons created</h1>


            <div class="container">
                <div class="card card-body">

                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th style="background-color: lightgray;"></th>
                                <th style="background-color: lightgray;">@Html.DisplayNameFor(model => model.CouponList[0].Coupon_Name)</th>
                                <th style="background-color: lightgray;">@Html.DisplayNameFor(model => model.CouponList[0].Percentage_Discount)</th>
                                <th style="background-color: lightgray;">@Html.DisplayNameFor(model => model.CouponList[0].Expiry_Date)</th>
                                <th style="background-color: lightgray;">@Html.DisplayNameFor(model => model.CouponList[0].Current_Coupon_Quantity)</th>
                                <th style="background-color: lightgray;">@Html.DisplayNameFor(model => model.CouponList[0].Points_to_redeem)</th>
                                <th style="background-color: lightgray;"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.CouponList)
                            {

                                <tr>
                                    <td><img style="height:60px;width:60px;" src="@item.ImageURL"></td>
                                    <td>@item.Coupon_Name</td>
                                    <td>@item.Percentage_Discount</td>
                                    <td>@item.Expiry_Date.ToShortDateString()</td>
                                    <td>@item.Current_Coupon_Quantity</td>
                                    <td>@item.Points_to_redeem</td>
                                    <td>
                                        @if (@item.Current_Coupon_Quantity <= 0)
                                        {
                                            <p style="color:black">No more of this coupon available</p>
                                        }
                                        else
                                        {
                                            @if (@item.Expiry_Date < todays_date)
                                            {
                                                <p style="color:black">Coupon has expired</p>
                                            }
                                            else
                                            {
                                                @if (Model.couponuser.points < @item.Points_to_redeem)
                                                {
                                                    <p style="color:black">You do not have enough points to redeem the coupon. Points: @Model.couponuser.points/@item.Points_to_redeem</p>
                                                }
                                                else
                                                {
                                                    <form method="post">
                                                        @*<div asp-validation-summary="All" class="text-danger"></div>*@


                                                        <div class="AddPopUp">
                                                            <input class="form-control" asp-for="MyCoupon.CouponId" type="hidden" value="@item.CouponId" />
                                                            <a class="btn btn-primary savodel" data-bs-toggle="modal" data-bs-target="#MyPopUp_@item.CouponId">Redeem</a>
                                                        </div>

                                                        <div class="modal fade" id="MyPopUp_@item.CouponId" role="alert">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-body">
                                                                        <h4>Are you sure you want to redeem coupon: @item.CouponId</h4>
                                                                        <br>
                                                                        <a class="btn btn-secondary poppy" href="/CouponRedeem" style="margin-left:300px">Cancel</a>

                                                                        <input class="form-control" asp-for="MyCoupon.CouponId" type="hidden" value="@item.CouponId" />
                                                                        <input type="submit" value="Redeem" class="btn btn-primary savodelconfirm" />
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                }
                                            }
                                        }

                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>

        }
    </section>
    <!-- End Hero Section -->
    <!-- Vendor JS Files -->
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/aos/aos.js"></script>
    <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>

    <script src="https://kit.fontawesome.com/3336a4ae8e.js" crossorigin="anonymous"></script>

    <!-- Template Main JS File -->
    <script src="assets/js/main.js"></script>

</body>

</html>
