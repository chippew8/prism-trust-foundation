    body{
        background-color:#008374;
    }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .savodel {
        border-color:black;
        background-color:white;
        color:black;
    }

    .savodel:hover {
        border-color:#198754;
        background-color:#198754;
        color:white;
    }

    .poppy{
        border-color:black;
        background-color:white;
        color:black;
    }

    .poppy:hover{
        border-color:#BEBEBE;
        background-color:#BEBEBE;
        color:white;
    }

    .savodelconfirm{
        border-color:black;
        background-color:white;
        color:black;
    }

    .savodelconfirm:hover{
        border-color:#198754;
        background-color:#198754;
        color:white;
    }
</style>