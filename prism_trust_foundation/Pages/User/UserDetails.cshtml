@page
@model prism_trust_foundation.Pages.User.UserDetailsModel
@{
    ViewData["Title"] = "Details page";
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}
<head>
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>
<body>
    <header id="header" class="header d-flex align-items-center">

        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.png" alt=""> -->
                <h1>Prism Trust Foundation<span>.</span></h1>
            </a>
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a href="/Index">Home</a></li>
                    <li class="dropdown">
                        <a href="#"><span>Services</span> <i class="bi bi-chevron-down dropdown-indicator"></i></a>
                        <ul>
                            <li><a href="#about">About</a></li>
                            <li><a href="#services">Services</a></li>
                            <li><a href="#team">Team</a></li>
                            <li><a href="#contact">Contact</a></li>
                        </ul>
                    </li>
                    <li><a href="">Events</a></li>
                    <li><a href="">Recycle</a></li>
                    <li><a href="">Donation</a></li>
                    <li><a href="">Volunteer</a></li>
                    <li><a href="">Require Assistance</a></li>
                    <li><img src="@(string.IsNullOrEmpty(Model.HomeUser.ImageURL) ?"/Picture/User.png" : Model.HomeUser.ImageURL)" width="40px" height="40px" /></li>

                </ul>
            </nav><!-- .navbar -->

            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

        </div>
    </header>
    <h2>Account Details</h2>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div> <label class="text-danger">@Model.MyMessage</label> </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-8">
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="HomeUser.NRIC">NRIC: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="HomeUser.NRIC" readonly />
                        <span asp-validation-for="HomeUser.NRIC" class="text-danger"></span>
                    </div>
                </div>
                <!-- Add your code -->
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="HomeUser.Fname">First Name: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="HomeUser.Fname" readonly />
                        <span asp-validation-for="HomeUser.Fname" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="HomeUser.Lname">Last Name: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="HomeUser.Lname" readonly />
                        <span asp-validation-for="HomeUser.Lname" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="HomeUser.Email">Email: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="HomeUser.Email" readonly />
                        <span asp-validation-for="HomeUser.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="HomeUser.Gender">Gender: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="HomeUser.Gender" readonly />
                        <span asp-validation-for="HomeUser.Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="HomeUser.PhoneNum">Phone Number: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="HomeUser.PhoneNum" readonly />
                        <span asp-validation-for="HomeUser.PhoneNum" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="HomeUser.BirthDate">Brithday Date: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="HomeUser.BirthDate" readonly />
                        <span asp-validation-for="HomeUser.BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="HomeUser.Password"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="HomeUser.Password" readonly />
                        <span asp-validation-for="HomeUser.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="HomeUser.Role"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="HomeUser.Role" readonly />
                        <span asp-validation-for="HomeUser.Role" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="HomeUser.Status"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="HomeUser.Status" readonly />
                        <span asp-validation-for="HomeUser.Status" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div>
                <input type="submit" asp-route-sessioncount="1" value="Change Password" class="btn btn-primary" />
                <input type="submit" asp-route-sessioncount="2" value="Update Details" class="btn btn-primary" />
                <input type="submit" asp-route-sessioncount="3" value="Upload Avatar" class="btn btn-primary" />
            </div>
    </form>
</body>