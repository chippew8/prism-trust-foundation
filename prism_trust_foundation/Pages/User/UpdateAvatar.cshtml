@page
@model prism_trust_foundation.Pages.User.UpdateAvatarModel
@{
    ViewData["Title"] = "Update Avatar page";
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}

<head>
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>

<body>
    <header id="header" class="header d-flex align-items-center">

        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.png" alt=""> -->
                <h1>Prism Trust Foundation<span>.</span></h1>
            </a>
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a href="/Index">Home</a></li>
                    <li class="dropdown">
                        <a href="#"><span>Services</span> <i class="bi bi-chevron-down dropdown-indicator"></i></a>
                        <ul>
                            <li><a href="#about">About</a></li>
                            <li><a href="#services">Services</a></li>
                            <li><a href="#team">Team</a></li>
                            <li><a href="#contact">Contact</a></li>
                        </ul>
                    </li>
                    <li><a href="">Events</a></li>
                    <li><a href="">Recycle</a></li>
                    <li><a href="">Donation</a></li>
                    <li><a href="">Volunteer</a></li>
                    <li><a href="">Require Assistance</a></li>
                    <li><img src="@(string.IsNullOrEmpty(Model.AvatarUser.ImageURL) ?"/Picture/User.png" : Model.AvatarUser.ImageURL)" width="40px" height="40px" /></li>

                </ul>
            </nav><!-- .navbar -->

            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

        </div>
    </header>
    <h2>Change Password</h2>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div> <label class="text-danger">@Model.MyMessage</label> </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-8">
                <div class="col-md-4">
                    <div class="mb-3">
                        <input type="file" accept="image/*" asp-for="Upload"
                               class="form-control" onchange="showImgPreview(this)" />
                        <span asp-validation-for="Upload" class="text-danger"></span>
                    </div>
                    <img id="imgPreview" class="rounded-circle" style="height:300px;width:300px;object-fit:cover" src="@(string.IsNullOrEmpty(Model.AvatarUser.ImageURL) ?"/uploads/user.png" : Model.AvatarUser.ImageURL)" onerror="this.src='/uploads/user.png'"/>
                    <input class="form-control d-none" asp-for="AvatarUser.ImageURL" />
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="AvatarUser.NRIC">NRIC: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="AvatarUser.NRIC" />
                        <span asp-validation-for="AvatarUser.NRIC" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="AvatarUser.Fname">First Name: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="AvatarUser.Fname" />
                        <span asp-validation-for="AvatarUser.Fname" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="AvatarUser.Lname">Last Name: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="AvatarUser.Lname" />
                        <span asp-validation-for="AvatarUser.Lname" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="AvatarUser.Email">Email: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="AvatarUser.Email" />
                        <span asp-validation-for="AvatarUser.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="AvatarUser.Gender">Gender: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="AvatarUser.Gender" />
                        <span asp-validation-for="AvatarUser.Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="AvatarUser.PhoneNum">Phone Number: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="AvatarUser.PhoneNum" />
                        <span asp-validation-for="AvatarUser.PhoneNum" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="AvatarUser.BirthDate">Birthday Date: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="AvatarUser.BirthDate" />
                        <span asp-validation-for="AvatarUser.BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="AvatarUser.Password">New Password: </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="AvatarUser.Password" />
                        <span asp-validation-for="AvatarUser.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="AvatarUser.Role"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="AvatarUser.Role" readonly />
                        <span asp-validation-for="AvatarUser.Role" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3" style="display:none">
                    <label class="col-sm-2 col-form-label" asp-for="AvatarUser.Status"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="AvatarUser.Status" readonly />
                        <span asp-validation-for="AvatarUser.Status" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div>
                <input type="submit" asp-route-sessioncount="1" value="Update" class="btn btn-primary" />
                <input type="submit" asp-route-sessioncount="2" value="Cancel" class="btn btn-primary" />
            </div>
    </form>
</body>

<script>
    function showImgPreview(input) {
        if (input.files[0]) {
            var uploadimg = new FileReader();
            uploadimg.onload = function (displayimg) {
                $("#imgPreview").attr('src', displayimg.target.result);
            }
            uploadimg.readAsDataURL(input.files[0]);
        }
    }
</script>