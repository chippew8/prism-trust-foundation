@page
@model prism_trust_foundation.Pages.User.ChangePassModel
@{
    ViewData["Title"] = "Change Password page";
}

<h2>Change Password</h2>
<form class="mt-3" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-8">
            <div class="row mb-3" style="display:none">
                <label class="col-sm-2 col-form-label" asp-for="PassUser.NRIC">NRIC: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PassUser.NRIC" />
                    <span asp-validation-for="PassUser.NRIC" class="text-danger"></span>
                </div>
            </div>
            <!-- Add your code -->
            <div class="row mb-3" style="display:none">
                <label class="col-sm-2 col-form-label" asp-for="PassUser.Fname">First Name: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PassUser.Fname" />
                    <span asp-validation-for="PassUser.Fname" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3"style="display:none">
                <label class="col-sm-2 col-form-label" asp-for="PassUser.Lname">Last Name: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PassUser.Lname" />
                    <span asp-validation-for="PassUser.Lname" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3" style="display:none">
                <label class="col-sm-2 col-form-label" asp-for="PassUser.Email">Email: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PassUser.Email" />
                    <span asp-validation-for="PassUser.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3" style="display:none">
                <label class="col-sm-2 col-form-label" asp-for="PassUser.Gender">Gender: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PassUser.Gender" />
                    <span asp-validation-for="PassUser.Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3" style="display:none">
                <label class="col-sm-2 col-form-label" asp-for="PassUser.PhoneNum">Phone Number: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PassUser.PhoneNum" />
                    <span asp-validation-for="PassUser.PhoneNum" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3" style="display:none">
                <label class="col-sm-2 col-form-label" asp-for="PassUser.BirthDate">Birthday Date: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PassUser.BirthDate" />
                    <span asp-validation-for="PassUser.BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="PassUser.Password">Password: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PassUser.Password" />
                    <span asp-validation-for="PassUser.Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div>
            <input type="submit" value="Update" class="btn btn-primary" />
            <a class="btn btn-secondary ms-2" href="/UserDetails">Cancel</a>
        </div>
</form>